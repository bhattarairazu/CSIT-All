<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/outerline_alertdialoguer"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout1"
        android:layout_margin="10dp"
        android:background="@drawable/roundwhite"

        >

        <EditText
            android:id="@+id/eventdescritpion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Add Subjects"
           android:background="@drawable/edittext_outerline"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/day_textview"
                android:text="Select Day:"
                android:textStyle="bold"
                android:layout_weight="50"
                android:textSize="15dp"
                android:textColor="@color/textcolor"
                />
        <Spinner
            android:layout_width="wrap_content"
            android:id="@+id/spinner_da"
            android:layout_height="30dp"
            android:layout_weight="50"
            android:clickable="true"
            ></Spinner>
        </LinearLayout>
        <EditText
            android:id="@+id/locations"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Add Teachers Name"
            tools:ignore="MissingConstraints"
            android:background="@drawable/edittext_outerline"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="337dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/time_start"
                android:text="Select Start Time"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="50"
                android:textColor="@color/textcolor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:id="@+id/time_end"
                android:text="Select End Time"
                android:textStyle="bold"
                android:layout_weight="50"
                android:textColor="@color/textcolor"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linaers"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/linear_layout1"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="10dp"

        >

        <Button
            android:id="@+id/btn_adds"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:textColor="@color/textcolor"
            android:textStyle="bold"
            android:background="@drawable/outerline"
            android:text="Add" />

        <Button
            android:id="@+id/cancel_btns"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="@drawable/outerline"
            android:text="Cancel"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            />
    </LinearLayout>
</RelativeLayout>