<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mlinear_layut1"
    android:orientation="horizontal"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/h3"
        android:layout_weight="0"
        android:id="@+id/mcricular_image"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mlinear_layut2"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Black
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kathmandu Nepal"
            android:id="@+id/mtexxtview_titles"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/textcolor"
            android:layout_marginBottom="7dp"
            android:textSize="15dp"
            />
        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Nice asdasdasdasdasdasd asdasd asda asdsad asd asd Songs."
            android:layout_marginRight="10dp"
            android:id="@+id/mtextview_tit"
            android:textColor="#817777"
            android:layout_marginBottom="5dp"
            android:textSize="13dp"
            />
        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 hrs Ago"
            android:textColor="#8c8787"
            android:id="@+id/textview_dates"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="13dp"
            />
    </LinearLayout>


</LinearLayout>