<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"

    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_navigaation"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:layout_marginLeft="05dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_qr_code"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"/>
        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
            android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:textSize="18dp"
            android:textStyle="bold"

            android:text="Razu Bhattarai"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_search"/>

        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Light
            android:id="@+id/txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:text="Home"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgh"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_earning"/>

        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Light
            android:id="@+id/txth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:text="Invite Friends"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgf"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_offers"/>

        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Light
            android:id="@+id/txtf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:text="View Profile"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgs"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_ranking"/>

        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Light
            android:id="@+id/txts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:text="Share on Facebook"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgfss"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_tv"/>

        <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Light
            android:id="@+id/mtextview_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"

            android:text="Log Out"
          />

    </LinearLayout>

</LinearLayout>