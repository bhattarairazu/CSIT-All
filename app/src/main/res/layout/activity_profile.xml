<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="#fff">


                <!-- Cover Image -->

                <ImageView
                    android:id="@+id/image_cover"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner1" />



                <!-- Round image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:weightSum="2"
                    android:layout_marginTop="170dp"

                    >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pro2"
                    android:layout_marginTop="175dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="start"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:background="#fff">

                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tom Cruise"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="22dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/mtextview_profilenames"
                        android:layout_gravity="left"/>
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mtextviewe_profiletext"
                        android:text="Kapan,Kathmandu"
                        android:textAlignment="center"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="left"
                        android:textSize="14dp"/>
                </LinearLayout>
                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">



                <!--<com.example.user.csitandroid.customfonts.MyTextView_Roboto_Regular-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Tom Cruise"-->
                    <!--android:textSize="22dp"-->
                    <!--android:id="@+id/mtexview_profilenames"-->
                    <!--android:layout_gravity="center"/>-->

                <!--<com.example.user.csitandroid.customfonts.MyTextView_Roboto_Regular-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/mtextviewe_profiletext"-->
                    <!--android:text="Address"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textSize="14dp"/>-->

                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>

                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Stars can't shine without darkness..."
                    android:textSize="14dp"
                    android:inputType="textMultiLine"
                    android:textAlignment="center"
                    android:id="@+id/mtextview_status"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="EDIT PROFILE"
                android:id="@+id/mtextview_editprofile"
                android:textAlignment="center"
                android:background="@drawable/qr_rect"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                />




            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"
                android:layout_marginTop="40dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256"
                        android:id="@+id/mtextview_profile_postno"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Posts"
                        android:textSize="14dp"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,080"
                        android:id="@+id/mtextview_profile_followers"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Followers"
                        android:textSize="14dp"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="144"
                        android:id="@+id/mtextview_profile_following"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Following"
                        android:textSize="14dp"/>

                </LinearLayout>




            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC" />






    </LinearLayout>

    </ScrollView>

</RelativeLayout>



