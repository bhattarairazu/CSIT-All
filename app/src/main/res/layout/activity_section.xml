<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_otheractivity"
        android:id="@+id/mlayout_tolbars"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mlinearlayout"
    android:weightSum="2"
    android:orientation="horizontal"
    >
    <com.andexert.library.RippleView
        android:id="@+id/moress1s"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        rv_centered="true">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/signin_rect"
        app:cardElevation="3dp"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1.5"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/sun"
                />
            <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectlayout"
                android:text="Events"
                android:textColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/more1ss"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        rv_centered="true">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        android:background="@drawable/rectlayout"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1.5"
                android:src="@drawable/sun"
                />
            <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectlayout"
                android:text="Routine"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mlinearlayout1"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <com.andexert.library.RippleView
            android:id="@+id/more1s"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            rv_centered="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="2dp"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:background="@drawable/signin_rect"
            app:cardElevation="3dp"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/sun"
                    />
                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectlayout"
                    android:text="Forums"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
        <com.andexert.library.RippleView
            android:id="@+id/more21"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            rv_centered="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/signin_rect"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1.5"
                   android:src="@drawable/sun"
                    />
                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectlayout"
                    android:text="Profile"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mlinearlayout12"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <com.andexert.library.RippleView
            android:id="@+id/more12"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            rv_centered="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="2dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/signin_rect"
            app:cardElevation="3dp"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/sun"
                    />
                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectlayout"
                    android:text="Feedback"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
        <com.andexert.library.RippleView
            android:id="@+id/ripple_notice"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:rv_rippleDuration="1"
            rv_centered="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp"
            android:background="@drawable/signin_rect"
            android:layout_margin="2dp"

            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1.5"
                   android:src="@drawable/sun"
                    />
                <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectlayout"
                    android:text="Notice"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        </com.andexert.library.RippleView>
    </LinearLayout>
    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        rv_centered="true">

    <com.example.user.androidcsit.customfonts.MyTextView_Roboto_Bold
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Notice"
        android:textColor="#931f1f"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_height="wrap_content"
        />
    </com.andexert.library.RippleView>
</LinearLayout>