<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_otheractivity"
        android:id="@+id/mtolbars_details"
        />

    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/mview2"
        android:layout_below="@+id/mtolbars_details"
        android:background="#acacac"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mview2"
        android:layout_above="@+id/mlinearlayots"
        android:id="@+id/mlistview_detailspost"
        />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/mlinearlayots"
          android:weightSum="2"
         android:layout_alignParentBottom="true"
          android:orientation="horizontal"
          >
   <EditText
       android:layout_width="match_parent"
       android:hint="Post Your Comment"
       android:padding="10dp"
       android:id="@+id/medittext1"
       android:layout_weight="1"
       android:layout_marginLeft="5dp"
       android:layout_height="50dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/mmvimageview_send"
        android:src="@drawable/ic_send"
        android:layout_weight="1"
        />
      </LinearLayout>
</RelativeLayout>